define intel_driver
$(1)@fetch := tar xf @SRCDIR@/ext-drivers/orig/$(1)-$(2).tar.gz
$(1)@src := $(1)-$(2)/src
$(1)@dst := $(1)
$(1)@patch := @SRCDIR@/ext-drivers/patches/$(1)-$(2)
$(1)@build := make -C $$($(1)@dst) EXTRA_CFLAGS="$(EXTRA_CFLAGS)"
endef

$(eval $(call intel_driver,ixgbe,4.4.6))
$(eval $(call intel_driver,e1000e,3.3.5))
$(eval $(call intel_driver,igb,5.3.5.3))
